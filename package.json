{
  "name": "tokenlab",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "playwright test --project=tokenlab-chromium",
    "test:headed": "playwright test --project=tokenlab-chromium --headed",
    "test:ui": "playwright test --project=tokenlab-chromium --ui",
    "test:demo": "node keep-windows-open.js",
    "browser:create": "node create-persistent-browser.js",
    "browser:close": "node close-persistent-browser.js",
    "test:target": "playwright test --project=tokenlab-chromium tests/tokenlab-target-persistent.spec.ts",
    "test:existing": "node target-existing-browser.js",
    "browser:launch": "node launch-persistent-browser.js"
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stellar-sdk": "^12.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
